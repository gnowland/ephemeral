.front
    .content
        flex-flow: column wrap
        align-items: center
        justify-content: center
        +min(2)
            margin-top: -20px
        h2
            font-size: 4.3rem
            font-weight: 600
            margin: 0
            padding: 0
            letter-spacing: -3px
            align-items: flex-start
            line-height: 0.8;
            text-align: center;
            padding-bottom: 0.25em;
            max-width: 100%
            +min(1)
                font-size: 7.4rem
                letter-spacing: -5px
            +min(2)
                font-size: 9rem
                margin: 0 0 0.9vw
                letter-spacing: -7px
            +min(3)
                font-size: 10rem
        h3
            font-size: 1.4rem
            margin: rem(15px) 0
            padding: 0.2em 0
            line-height: 1
            text-align: center
            max-width: 100%
            color: scheme.heading
            +min(1)
                font-size: 2rem
            +min(2)
                font-size: 2.6rem
            +min(3)
                font-size: 2.8rem
        div
            display: flex
            flex-wrap: wrap
            align-items: center
            justify-content: center
            p
                width: 100%
                font-size: 1rem
                text-align: center
                margin: rem(15px) 0
                color: scheme.heading
                line-height: 1
                padding: 0.2em 0
                +min(1)
                    font-size: 1.2rem
                +min(2)
                    font-size: 1.6rem
                +min(3)
                    font-size: 1.8rem
                small
                    color: #999;
                    display: inline-block;
                    line-height: 1.3em;
                a
                    color: #3cb371;

            div
                display: flex
                flex-flow: row wrap
                justify-content: center
                width: 100%
                +min(1)
                    width: auto
                a
                    button(large, color: mediumseagreen)
                    margin: rem(7px)
                    min-width: auto
                    +min(1)
                        font-size: 1.2rem
                        padding: rem(16px) rem(35px)
                    +min(2)
                        font-size: 1.25rem
                        padding: rem(17px) rem(36px)
                    +min(3)
                        font-size: 1.32rem
                        padding: rem(18px) rem(38px)
